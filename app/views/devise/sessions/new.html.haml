.login-wrapper
  .login-container
    .login-title メールアドレスでログイン
    .login-container__box
      .login-contents
      .login-background
        .login-icon
          = fa_icon "unlock-alt", class: "login-key"
        .login-form
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "login-field"
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "login-field"
            - if devise_mapping.rememberable?
              .login-checkbox
                = f.check_box :remember_me
                = f.label :ログイン情報を記憶させる
            = f.submit "ログイン", class: "login-btn"
          .move-signup-btn
            = link_to "新規登録はこちら", new_user_registration_path, class: "go-signup"
